html, body
  padding: 0
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
  min-height 100%
  background whitesmoke
  height 100%
  width:100%
a
  color: #00B7FF
.nopadding
  margin-left -15px !important
  margin-right -15px !important
  margin-top 0
  margin-bot 0
  padding 0 !important

#bluebar
  background #00B7FF
  height 20px
  visibility hidden


body
  height 100%
.wrap
  min-height 100%
  height 100%
  .container-fluid
    min-height 100% !important
    height 100%
    #btnrow
      height 85%;
      #btnspan
        height 100%
        padding 0 20px 0 20px
        button
          height 100%
          border-radius 0


    #textarea
      height 15%
      padding 8px 0 0 0
      vertical-align middle
      margin-left auto
      margin-right auto
      #centertext
        height 100%
        #status
          float left
          margin-right 0
        #onoff
          float left
          padding-left 2px
